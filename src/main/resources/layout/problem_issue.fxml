<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<Pane maxHeight="-Infinity"
      maxWidth="-Infinity"
      minHeight="-Infinity"
      minWidth="-Infinity"
      prefHeight="712.0"
      prefWidth="821.0"
      xmlns="http://javafx.com/javafx/8.0.172-ea"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.senjoeson.cordovahelp.controller.IssueController">

    <children>

        <TextField
            fx:id="title"
            layoutX="119.0"
            layoutY="41.0"
            prefHeight="32.0"
            prefWidth="454.0"
            promptText="问题的主题"/>

        <TextArea
            fx:id="content"
            layoutX="120.0"
            layoutY="103.0"
            prefHeight="318.0"
            prefWidth="454.0"
            promptText="关于问题的详细描述"/>

        <Label
            layoutX="51.0"
            layoutY="41.0"
            prefHeight="32.0"
            prefWidth="60.0"
            text="反馈问题:"/>

        <Label
            layoutX="51.0"
            layoutY="100.0"
            prefHeight="32.0"
            prefWidth="60.0"
            text="问题描述:"/>

        <TextField
            fx:id="email"
            layoutX="119.0"
            layoutY="457.0"
            prefHeight="32.0"
            prefWidth="454.0"
            promptText="例如:xxxx@qq.com"/>

        <Label
            layoutX="57.0"
            layoutY="457.0"
            prefHeight="32.0"
            prefWidth="60.0"
            text="回执邮箱:"/>

        <Button
            fx:id="submit"
            defaultButton="true"
            layoutX="308.0"
            layoutY="538.0"
            mnemonicParsing="false"
            onMouseClicked="#submitIssue"
            prefHeight="32.0"
            prefWidth="76.0"
            text="提交问题"/>

        <ProgressIndicator
            fx:id="mProgressIndicator"
            layoutX="289.0"
            layoutY="230.0"
            prefHeight="65.0"
            prefWidth="95.0"
            visible="false"/>

        <Label
            alignment="CENTER"
            contentDisplay="CENTER"
            layoutX="598.0"
            layoutY="109.0"
            lineSpacing="10.0"
            prefHeight="114.0"
            prefWidth="211.0"
            text="可能您使用的途中,出现了一些问题,烦请您提出您的宝贵意见, 感谢"
            textFill="#ee0b0b"
            wrapText="true"/>

    </children>
</Pane>
